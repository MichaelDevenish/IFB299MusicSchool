<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="152" VerticalAlignment="Top" Width="790"/>
        <TabControl HorizontalAlignment="Left" Height="417" Margin="0,152,0,0" VerticalAlignment="Top" Width="800" Padding="0" SelectionChanged="tab_changed">
            <TabItem Header="ACCOUNT" Margin="-0.2,0,0,0" IsTabStop="False" Padding="0,-2,4,0" HorizontalAlignment="Left" Width="160">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200*"/>
                        <ColumnDefinition Width="600*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="24" Margin="51,72,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="261"/>
                    <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="22" Margin="51,142,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="261"/>
                    <Label Content="Username" Grid.Column="1" HorizontalAlignment="Left" Margin="51,42,0,0" VerticalAlignment="Top" Width="167" Height="30"/>
                    <Label Content="Label" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="51,112,0,0" VerticalAlignment="Top" Width="217"/>
                    <Button Content="Log on" Grid.Column="1" HorizontalAlignment="Left" Margin="51,188,0,0" VerticalAlignment="Top" Width="75"/>
                </Grid>
            </TabItem>
            <TabItem Header="TIMETABLE" Width="160" Margin="0" HorizontalAlignment="Left">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="White">
                    <Label x:Name="errorMessage" Content="Must be logged in to use this feature..." HorizontalAlignment="Left" Height="60" Margin="256,150,0,0" VerticalAlignment="Top" Width="324"/>
                    <GroupBox x:Name ="timetable_ret" Header="GroupBox" HorizontalAlignment="Left" Height="320" Margin="206,34,0,0" VerticalAlignment="Top" Width="485">
                        <Button Content="Retrieve timetable" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="102" Margin="39,236,0,0"/>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Margin="0" Width="160" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" Padding="6,2,0,2" Header="CONTACT"/>
            <TabItem Margin="0" Width="160" HorizontalAlignment="Left" Header="FEATURES"/>
            <TabItem Margin="0" HorizontalAlignment="Left" Width="154" Padding="0" Header="MISC"/>
        </TabControl>

    </Grid>
</Window>
