<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="152" VerticalAlignment="Top" Width="790"/>
        <TabControl HorizontalAlignment="Left" Height="417" Margin="0,152,0,0" VerticalAlignment="Top" Width="800" Padding="0">
            <TabItem Header="ACCOUNT" Margin="-0.2,0,0,0" IsTabStop="False" Padding="0,-2,4,0" HorizontalAlignment="Left" Width="160">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="77*"/>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="43*"/>
                        <ColumnDefinition Width="258*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
            <TabItem Header="TIMETABLE" Width="160" Margin="0" HorizontalAlignment="Left">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="White"/>
            </TabItem>
            <TabItem Margin="0" Width="160" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" Padding="6,2,0,2" Header="CONTACT"/>
            <TabItem Margin="0" Width="160" HorizontalAlignment="Left" Header="FEATURES"/>
            <TabItem Margin="0" HorizontalAlignment="Left" Width="154" Padding="0" Header="MISC"/>
        </TabControl>

    </Grid>
</Window>
