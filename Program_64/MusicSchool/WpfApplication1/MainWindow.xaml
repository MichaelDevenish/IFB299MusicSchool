<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="152" VerticalAlignment="Top" Width="790"/>
        <TabControl HorizontalAlignment="Left" Height="417" Margin="0,152,0,0" VerticalAlignment="Top" Width="800" Padding="0" SelectionChanged="tab_changed">
            <TabItem Header="ACCOUNT" Margin="-0.2,0,0,0" IsTabStop="False" Padding="0,-2,4,0" HorizontalAlignment="Left" Width="160">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200*"/>
                        <ColumnDefinition Width="600*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ACCOUNT" HorizontalAlignment="Left" Height="78" Margin="24,81,0,0" VerticalAlignment="Top" Width="166" Style="{StaticResource Page_header}"/>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="324" Margin="28,28,0,0" VerticalAlignment="Top" Width="532">
                        <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Width="167" Height="30"/>
                        <TextBox HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="262"/>
                        <Label Content="Password" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="217"/>
                        <TextBox HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="262"/>
                        <Button Content="Log on" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>


                    </StackPanel>
                    
                </Grid>
            </TabItem>
            <TabItem Header="TIMETABLE" Width="160" Margin="0" HorizontalAlignment="Left">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="errorMessage" Content="Must be logged in to use this feature..." HorizontalAlignment="Left" Height="60" Margin="334,229,0,0" VerticalAlignment="Top" Width="324"/>
                    <Label Style ="{StaticResource Page_header}" Content="TIMETABLE" HorizontalAlignment="Left" Height="50" Margin="37,127,0,0" VerticalAlignment="Top" Width="128"/>
                    <StackPanel HorizontalAlignment="Left" Height="306" Margin="229,39,0,0" VerticalAlignment="Top" Width="522">
                        <DataGrid Height="97"/>
                        <Button Content="Button"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Margin="0" Width="160" HorizontalContentAlignment="Stretch" HorizontalAlignment="Left" Padding="6,2,0,2" Header="CONTACT"/>
            <TabItem Margin="0" Width="160" HorizontalAlignment="Left" Header="INSTRUMENTS">
                <Label Content="You must be logged in to use this feature..." HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="246" Margin="315,152,0,0"/>
            </TabItem>
            <TabItem Margin="0" HorizontalAlignment="Left" Width="154" Padding="0" Header="MISC"/>
        </TabControl>

    </Grid>
</Window>
