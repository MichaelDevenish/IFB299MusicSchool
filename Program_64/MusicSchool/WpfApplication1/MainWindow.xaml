<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="826.5" Width="800">
    <Grid>
        <Image HorizontalAlignment="Left" Height="152" VerticalAlignment="Top" Width="790"/>
        <TabControl HorizontalAlignment="Left" Height="633" Margin="0,152,-8,0" VerticalAlignment="Top" Width="800" Padding="0" SelectionChanged="tab_changed">
            <TabItem Header="ACCOUNT" Margin="0" IsTabStop="False" Padding="0,-2,4,0" HorizontalAlignment="Left" Width="160">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200*"/>
                        <ColumnDefinition Width="600*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="ACCOUNT" HorizontalAlignment="Left" Height="78" Margin="24,81,0,0" VerticalAlignment="Top" Width="166" Style="{StaticResource Page_header}"/>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="324" Margin="28,28,0,0" VerticalAlignment="Top" Width="532">
                        <Label Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Width="167" Height="30"/>
                        <TextBox HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="262"/>
                        <Label Content="Password" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="217"/>
                        <TextBox HorizontalAlignment="Left" Height="22" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="262"/>
                        <Button Content="Log on" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>


                    </StackPanel>

                </Grid>
            </TabItem>
            <TabItem Header="TIMETABLE" Margin="0" HorizontalAlignment="Left" Width="160">
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                        <GradientStop Color="#FFF0F0F0" Offset="0"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="errorMessage" Content="Must be logged in to use this feature..." HorizontalAlignment="Left" Height="60" Margin="334,229,0,0" VerticalAlignment="Top" Width="324"/>
                    <Label Style ="{StaticResource Page_header}" Content="TIMETABLE" HorizontalAlignment="Left" Height="50" Margin="37,127,0,0" VerticalAlignment="Top" Width="128"/>
                    <StackPanel HorizontalAlignment="Left" Height="306" Margin="229,39,0,0" VerticalAlignment="Top" Width="522">
                        <DataGrid Height="97"/>
                        <Button Content="Button"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Margin="0" Header="CONTACTS" HorizontalAlignment="Left" Width="160">
                <Label Content="Contact Information" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="162" Margin="313,30,0,0"/>
            </TabItem>
            <TabItem Margin="0" Header="INSTRUMENTS" HorizontalAlignment="Left" Width="160">
                <Label Content="Instrunment List" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="240" Margin="315,152,0,0"/>
            </TabItem>
            <TabItem Margin="0" Header="MISC" HorizontalAlignment="Left" Width="150">
                <Label Content="Music School History" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="246" Margin="315,152,0,0"/>
            </TabItem>

        </TabControl>
        <Image x:Name="imgMusicSchool" HorizontalAlignment="Left" Height="86" Margin="323,28,0,0" VerticalAlignment="Top" Width="150"/>
        <Image Source="Images/header.png" Margin="0,0,0,695"/>
    </Grid>
</Window>
