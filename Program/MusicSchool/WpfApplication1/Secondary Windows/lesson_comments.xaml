<Window x:Class="WpfApplication1.Secondary_Windows.lesson_comments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1.Secondary_Windows"
        mc:Ignorable="d"
        Title="Lesson" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="comment_box" HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="272"/>
        <CheckBox x:Name="attended_chkbx" Content="Student Attended" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top"/>
        <Button x:Name="submit_btn" Content="Submit" HorizontalAlignment="Left" Margin="10,199,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.08,-0.16" Click="submit_btn_Click"/>

    </Grid>
</Window>
